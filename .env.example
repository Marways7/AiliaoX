# ==================== 数据库配置 ====================
DATABASE_URL="mysql://root:123456@localhost:3308/ailiaox"
MYSQL_HOST=localhost
MYSQL_PORT=3308
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_DATABASE=ailiaox

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== JWT认证配置 ====================
# JWT密钥 - 生产环境必须修改为复杂的随机字符串
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Access Token过期时间 (例如: 15m, 1h, 7d)
JWT_EXPIRES_IN=15m
# Refresh Token密钥 - 生产环境必须修改
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
# Refresh Token过期时间
JWT_REFRESH_EXPIRES_IN=7d

# ==================== AI模型配置 ====================
# 默认AI模型提供商 (deepseek | gemini | kimi | openai)
DEFAULT_AI_PROVIDER=deepseek

# DeepSeek API (必需)
# DeepSeek是一个高性能的大语言模型，支持中英文对话
# 获取API Key: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# Google Gemini API (可选)
# Gemini是Google的多模态AI模型，支持文本和图像理解
# 获取API Key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_BASE=https://generativelanguage.googleapis.com/v1beta

# Moonshot Kimi API (可选)
# Kimi支持超长上下文（128K tokens），适合处理长文档
# 获取API Key: https://platform.moonshot.cn/
KIMI_API_KEY=your-kimi-api-key-here
KIMI_API_BASE=https://api.moonshot.cn/v1

# OpenAI API (可选)
# OpenAI提供GPT-4、GPT-3.5等模型
# 获取API Key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_ORGANIZATION=your-org-id-here

# ==================== MCP配置 ====================
MCP_SERVER_COMMAND=/root/mcp-env/bin/uvx
MCP_SERVER_PACKAGE=mysql-mcp-server

# ==================== 服务端口配置 ====================
BACKEND_PORT=3000
FRONTEND_PORT=5173

# ==================== 加密配置 ====================
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this
ENCRYPTION_ALGORITHM=aes-256-gcm

# ==================== CORS配置 ====================
CORS_ORIGIN=http://localhost:5173

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_DIR=./logs

# ==================== 文件上传配置 ====================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ==================== 邮件配置（可选） ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# ==================== 环境 ====================
NODE_ENV=development